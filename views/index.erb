<script src="js/jquery-2.1.4.min.js"></script>
<link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
<link rel="stylesheet" href="css/style.css" type="text/css"/>

<div id="outer">
	<div class="w3-border w3-round-xlarge" id="inner">
		<p/>
		<header class="w3-container w3-teal">
			<h1>Hotel California</h1>
		</header>
		<ul class="w3-navbar w3-grey">
			<li><a id="guestbook_tab" href="#">Guestbook</a></li>
			<li><a id="feedback_tab" href="#">Your Feedback</a></li>
			<li><a id="search_tab" href="#">Search</a></li>
			<li><a id="settings_tab" href="#">Settings</a></li>
		</ul>

		<% if flash[:message] %>
			<div id=flash class="w3-container w3-green w3-round">
				<p><%= flash[:message]%></p>
			</div>
		<% end %>

		<% if flash[:error] %>
				<div id=flash class="w3-container w3-red w3-round">
					<p><%= flash[:error]%></p>
				</div>
		<% end %>

		<div id="Guestbook" class="w3-container tab">
      <%= erb :guestbook %>
		</div>

		<div id="Feedback" class="w3-container tab">
      <%= erb :feedback_form %>
		</div>

    <div id="Search" class="w3-container tab">
      <%= erb :search_form %>
    </div>

		<div id="Settings" class="w3-container tab">
      <%= erb :settings %>
		</div>
	</div>
</div>
<script src="js/app.js"></script>