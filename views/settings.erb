<h2>Settings</h2>
<h4>XSS Protection Level</h4>
<form id=xss_settings_form class="w3-container" method="post" action="/update_settings">
  <%= select_tag("xss_level", "value", [
      ["no_protection","No Protection"],
      ["disallow_script_tag", "Input Validation (&lt;script&gt; Tag)"],
      ["disallow_html_tag", "Input Validation (&lt; and &gt;)"],
      ["encode_output", "Encode Output"],
      ["csp", "CSP"]
  ], session[:xss_settings]) %>
  <input name="type" value="xss" type="hidden"/>
</form>
